<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4A8A8"
    tools:context=".mudarcadastro">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hora de Doar"
        android:textSize="39dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id = "@+id/relativelayout"
        android:layout_marginStart="2dp"
        >
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="380dp"
        android:backgroundTintMode="src_over"
        app:srcCompat="@drawable/setavoltar"
        android:background="@color/white"
        android:hapticFeedbackEnabled = "@dimen/material_emphasis_medium"


        />
    <ImageView
        android:layout_width="410dp"
        android:layout_height="55dp"
        android:src="@drawable/cooracao"
        android:padding="1dp"
        android:layout_marginEnd="4dp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/cadnomecompleto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="5dp"
        android:text="Nome Completo" />

    <EditText
        android:id="@+id/caddatnascimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:padding="5dp"
        android:text="Data Nascimneto"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/cadtelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:padding="5dp"
        android:text="Telefone"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/tiposanguineo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="5dp"
        android:text="Tipo Sanguineo" />

    <EditText
        android:id="@+id/cadendereço"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="5dp"
        android:text="Endereço " />


    <EditText
        android:id="@+id/casdastraemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp"
        android:text="Email"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/confimaremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="5dp"
        android:text="Confirmar-Email" />

    <EditText
        android:id="@+id/primesenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:padding="5dp"
        android:text="Senha"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/confirmasenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:padding="5dp"
        android:text="confirmar senha"
        tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/icone"/>


    <Button
        android:id="@+id/alterarcadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alterar Cadastro"
        android:textStyle="bold"
        android:backgroundTint="#E3402A"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />




</LinearLayout>