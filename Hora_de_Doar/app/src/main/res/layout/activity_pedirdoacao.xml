<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4A8A8"
    tools:context=".pedirdoacao">

  <ImageButton
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="2dp"
      android:layout_marginTop="12dp"
      android:layout_marginEnd="350dp"
      android:background="@color/white"
      android:padding="10dp"
      android:src="@drawable/setavoltar"
      tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Hora de Doar"
          android:gravity="center"
          android:textSize="40dp"
          android:textColor="@color/white"
          android:textStyle="bold"
          android:backgroundTint="#FF3C3C"
          android:background="@color/black"/>

      <ImageView
          android:layout_width="300dp"
          android:layout_height="200dp"
        android:src="@drawable/cooracao"
        android:layout_marginTop="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center"/>

  <RelativeLayout
      android:layout_width="400dp"
      android:layout_height="400dp"
      tools:ignore="ExtraText">
        <TextView
            android:layout_width="400dp"
            android:layout_height="400dp"
          android:backgroundTint="@color/white"
          android:layout_marginTop="20dp"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="2dp"
          android:layout_gravity="center"
          android:background="@color/white"/>
/>
    <EditText
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:backgroundTint="#EFECEC"
        android:gravity="center"
        android:lineBreakWordStyle="none"
        android:hint="  Nome"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:backgroundTint="#EFECEC"
        android:gravity="center"
        android:lineBreakWordStyle="none"
        android:hint=" Hospital"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:backgroundTint="#EFECEC"
        android:gravity="center"
        android:lineBreakWordStyle="none"
        android:hint=" Setor internação"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:backgroundTint="#EFECEC"
        android:gravity="center"
        android:lineBreakWordStyle="none"
        android:hint="Idade"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:backgroundTint="#EFECEC"
        android:gravity="center"
        android:hint="Tipo Sanguineo"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_marginTop="250dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:hint="Pedir Doação!"
            android:gravity="center"
            android:maxLines="7"
            android:backgroundTint="#EFECEC"/>

    <Button
        android:layout_width="500dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#E3402A"
        android:text="Vamos Doar!"
        tools:ignore="TouchTargetSizeCheck" />
  </RelativeLayout>

</LinearLayout>