<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4A8A8"
    tools:context=".cadastro">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hora de Doar"
        android:textColor="@color/white"
        android:textSize="39dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,MissingConstraints,SpUsage,TextContrastCheck" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginEnd="1dp"
        android:padding="1dp"
        android:src="@drawable/cooracao"
        tools:ignore="ContentDescription,ImageContrastCheck,MissingConstraints" />

    <EditText
        android:id="@+id/cadnomecompleto"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="5dp"
        android:text="@string/nome_completo"
        tools:ignore="Autofill,LabelFor,MissingConstraints,TextFields,TextSizeCheck,TouchTargetSizeCheck,DuplicateClickableBoundsCheck" />

    <EditText
        android:id="@+id/caddatnascimento"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="5dp"
        android:text="@string/data_nascimneto"
        tools:ignore="Autofill,LabelFor,MissingConstraints,TextSizeCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/cadtelefone"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="5dp"
        android:text="@string/telefone"
        android:textSize="20dp"
        tools:ignore="Autofill,LabelFor,MissingConstraints,SpUsage,TextSizeCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/tiposanguineo"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="5dp"
        android:text="@string/tipo_sanguineo"
        tools:ignore="Autofill,LabelFor,MissingConstraints,TextFields,TextSizeCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/cadendereÃ§o"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="5dp"
        android:text="@string/endere_o"
        tools:ignore="Autofill,LabelFor,MissingConstraints,TextFields,TextSizeCheck,TouchTargetSizeCheck" />


    <EditText
        android:id="@+id/casdastraemail"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="5dp"
        android:text="@string/email"
        tools:ignore="Autofill,LabelFor,MissingConstraints,TextFields,TextSizeCheck,TouchTargetSizeCheck,VisualLintOverlap" />

    <EditText
        android:id="@+id/confimaremail"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="5dp"
        android:text="@string/confirmar_email"
        tools:ignore="Autofill,LabelFor,MissingConstraints,TextFields,TextSizeCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/primesenha"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="5dp"
        android:text="@string/senha"
        tools:ignore="Autofill,LabelFor,MissingConstraints,TextSizeCheck,TouchTargetSizeCheck,VisualLintOverlap" />

    <EditText
        android:id="@+id/confirmasenha"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:minHeight="4dp"
        android:padding="5dp"
        android:text="@string/confirmar_senha"
        tools:ignore="Autofill,LabelFor,MissingConstraints,TextSizeCheck,TouchTargetSizeCheck" />


    <RadioButton
        android:id="@+id/notificacao"
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:minLines="1"
        android:text="@string/receber_notifica_o_email"
        android:textColor="#000000"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,DuplicateClickableBoundsCheck,TextContrastCheck" />

    <RadioButton

        android:id="@+id/politica"
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:minLines="1"
        android:text="@string/eu_concordo_com_a_pol_tica_de_privacidade"
        tools:ignore="MissingConstraints,TextSizeCheck,TouchTargetSizeCheck,TextContrastCheck" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#E3402A"
        android:minHeight="30dp"
        android:text="@string/cadastrar"
        android:textStyle="bold"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,VisualLintButtonSize"  />




</LinearLayout>